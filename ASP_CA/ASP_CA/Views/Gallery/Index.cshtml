
@using  ASP_CA.Controllers
@{
    ViewData["Title"] = "Index";
    var products = (List<Product>)ViewData["products"];
    int total = (int)ViewData["quantity"];

}
@*<a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">Cart</a>*@

<style>
    .btn {
        background: white;
        border-radius: 12px;
    }
</style>

@*<div class="btn">Quantity @ViewData["quantity"]</div>*@

<div>
    <span style="font-weight:bold;font-size:45px;line-height:40px;display:flex;justify-content:center">
        Welcome @ViewData["greeting"]



        <div class="btn" style="position:relative;left:25%">
            <a class="material-icons" asp-area="" asp-controller="Cart" asp-action="Index">shopping_cart</a>
            @ViewData["quantity"]
        </div>
    </span>
</div>



















<style>
    .shopping-cart {
        width: 90%;
        height: 30%;
        margin: 80px auto;
        background: #f5f2f2;
        box-shadow: 1px 2px 3px 0px rgba(0,0,0,0.10);
        border-radius: 6px;
        display: flex;
        flex-direction: column;
    }

    .title {
        height: 70px;
        border-bottom: 1px solid #E1E8EE;
        padding: 20px 30px;
        color: #5E6977;
        font-size: 20px;
        font-weight: 600;
    }

    .item {
        padding: 30px 50px;
        height: 300px;
        display: flex;
    }

        .item:nth-child(2) {
            border-top: 1px solid #E1E8EE;
            border-bottom: 1px solid #E1E8EE;
        }

    .image {
        width: 280px;
        height: 100%;
    }

    /*product name, description*/
    .description {
        padding-top: 10px;
        margin-right: 60px;
        width: 170px;
        font-size: 12px;
    }

        .description span {
            display: block;
            font-size: 14px;
            color: #43484D;
            font-weight: 400;
        }

            .description span:first-child {
                margin-bottom: 5px;
            }

            .description span:last-child {
                font-weight: 300;
                margin-top: 8px;
                color: #86939E;
            }

    .quantity {
        padding-top: 20px;
        margin-right: 60px;
    }

        .quantity input {
            -webkit-appearance: none;
            border: none;
            text-align: center;
            width: 32px;
            font-size: 16px;
            color: #43484D;
            font-weight: 300;
        }

    .quantity-btn img {
        margin-top: 4px;
        /*margin-bottom: 4px;*/
        padding-top: 10px;
    }

    .itemPrice {
        padding-top: 10px;
        margin-right: 20px;
        width: 50px;
    }

    .delete-btn {
        display: inline-block;
        Cursor: pointer;
    }

    /*button*/
    .buttons {
        padding-top: 10px;
        margin-right: 10px;
    }

    button:focus,
    input:focus {
        outline: 0;
    }

    .total {
        float: right;
    }

    .total-item {
        float: right;
        clear: both;
        width: 100%;
        margin-bottom: 10px;
    }

    label {
        float: left;
        clear: both;
        width: 79%;
        text-align: right;
    }

    .total-value {
        float: right;
        width: 21%;
        text-align: right;
    }

    .checkout-btn {
        float: right;
        font-size: 18px;
    }

    /*    .checkout-btn:hover {
        background-color: #edd2be;
    }*/

</style>


<div class="shopping-cart" style="width:100%">
    <div style="position:relative">
        <div class="title">
            Gallery
            @if (ViewData["Name"] != null)
            {
                <a  asp-area="" asp-controller="MyPurchases" asp-action="Index">My Purchases</a>
            }
            <form id="form" style="float:right" action="/Gallery/Search" method="post">Search: <input name="search" /><input type="submit" value="Search" /></form>
        </div>



        <div class="item" style="width:100%; height:450px">
            @foreach (var product in products)
            {@*product image*@
            <div class="image" style="width:180px">
                <img src="/img/@(product.ProductId).png" width="120" height="100" />





                @*Product name & description*@
                <div class="description" style="float:left;width:110px">
                    <span style="height:50px">@product.ProductName</span>
                    <span style="height:110px">@product.ProductDesc</span>
                    <span style="height:30px">$@product.ProductPrice</span>
                </div>





                <div class="quantity" style="float:left">





                    <form id="form" action="/Gallery/Click" method="post">
                        <input type="hidden" name="productId" value="@product.ProductId" />
                        <input type="submit" value="Add To cart" style="width:120px;height:35px; background-color: darkgrey; color: white; font-weight: bold; border-radius: 12px;float:left" />
                    </form>





                </div>





            </div> @*Quantity*@ @*<div class="quantity">
                    <button class="quantity-btn" type="button" name="button">
                        <i class="material-icons" style="font-size:24px;">add_circle_outline</i>
                    </button>
                    <input type="text" name="quantity" value="1" min="1" style="width: 30px;" />
                    <button class="quantity-btn" type="button" name="button">
                        <i class="material-icons" style="font-size:24px;">remove_circle_outline</i>
                    </button>
                </div>*@}
        </div>
    </div>



</div>
@if (ViewData["clearsearch"] != null)
{
    <a class="btn" asp-area="" asp-controller="Gallery" asp-action="ClearSearch">Clear Search</a>
}











