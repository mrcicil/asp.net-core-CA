            transform: translate(-50%, -50%)
        }

    .emptyfont {
        font-size: 40px
    }

    .btn {
        background: white;
    }
</style>
<script>
    function checkLogin() {
        alert('Please Log In');
    }  @*login warning*@
    function thankspurchase() {
        alert('Thanks for purchase! Enjoy your day!!')
    }   @*after purchase*@
    function reachlowlimit() {
        alert('Select remove if you want to delete the item')
    }     @*minimum spedn*@
</script>







@{
    @* ViewData["Title"] = "Cart";
        List<Cart> cartItems = (List<Cart>)ViewData["cart"];*@
}
<style>
    .shopping-cart {
        width: 90%;
        height: 30%;
        margin: 80px auto;
        background: #f5f2f2;
        box-shadow: 1px 2px 3px 0px rgba(0,0,0,0.10);
        border-radius: 6px;
        display: flex;
        flex-direction: column;
    }

    .title {
        height: 70px;
        border-bottom: 1px solid #E1E8EE;
        padding: 20px 30px;
        color: #5E6977;
        font-size: 20px;
        font-weight: 600;
    }

    .item {
        padding: 30px 50px;
        height: 300px;
        display: flex;
    }

        .item:nth-child(2) {
            border-top: 1px solid #E1E8EE;
            border-bottom: 1px solid #E1E8EE;
        }

    .image {
        width: 280px;
        height: 100%;
    }

    /*product name, description*/
    .description {
        padding-top: 10px;
        margin-right: 60px;
        width: 170px;
        font-size: 12px;
    }

        .description span {
            display: block;
            font-size: 14px;
            color: #43484D;
            font-weight: 400;
        }

            .description span:first-child {
                margin-bottom: 5px;
            }

            .description span:last-child {
                font-weight: 300;
                margin-top: 8px;
                color: #86939E;
            }

    .quantity {
        padding-top: 20px;
        margin-right: 60px;
    }

    .quantity2 {
        padding-top: 20px;
        margin-right: 60px;
    }

        .quantity input {
            -webkit-appearance: none;
            border: none;
            text-align: center;
            width: 32px;
            font-size: 16px;
            color: #43484D;
            font-weight: 300;
        }

    .quantity-btn img {
        margin-top: 4px;
        /*margin-bottom: 4px;*/
        padding-top: 10px;
    }

    .quantity2-btn img {
        margin-top: 4px;
        /*margin-bottom: 4px;*/
        padding-top: 10px;
    }

    .itemPrice {
        padding-top: 10px;
        margin-right: 20px;
        width: 50px;
    }

    .delete-btn {
        display: inline-block;
        Cursor: pointer;
    }

    /*button*/
    .buttons {
        padding-top: 10px;
        margin-right: 10px;
    }

    button:focus,
    input:focus {
        outline: 0;
    }

    .total {
        float: right;
    }

    .total-item {
        float: right;
        clear: both;
        width: 100%;
        margin-bottom: 10px;
    }

    label {
        float: left;
        clear: both;
        width: 79%;
        text-align: right;
    }

    .total-value {
        float: right;
        width: 21%;
        text-align: right;
    }

    .checkout-btn {
        float: right;
        font-size: 18px;
    }

    /*    .checkout-btn:hover {
        background-color: #edd2be;
    }*/

</style>


@if (total == 0)
{
    <div class="container4 emptyfont">
        <p>Empty Cart!
    </div>

    <div class="container4">
        <form action="/Gallery/Index" method="post">
            <p><input class="container4" type="submit" value="Continue Shopping" />
        </form>
    </div>
}
else
{
    <div class="shopping-cart">
        <div class="title">
            Shopping cart
            @if (ViewData["Name"] != null)
            {
                <a asp-area="" asp-controller="MyPurchases" asp-action="Index">My Purchases</a>
            }

            @if (total != 0)
            {
                @if (ViewData["Name"] == null)
                {
                    <div style="float:right">
                        <a onclick="checkLogin()" asp-area="" asp-controller="Cart" asp-action="Index">Checkout</a>
                    </div>
                }
                else
                {
                    <div style="float:right">
                        <a onclick="thankspurchase()" asp-area="" asp-controller="Cart" asp-action="Checkout">Checkout</a>
                    </div>
                }
            }
        </div>

            @foreach (var product in viewcart)
            {
    <div class="item" style="height:130px;border-color:transparent">

        @*product image*@
        <div class="image" style="width:130px">
            <img src="/img/@(product.ProductId).png" width="80" height="80" />
        </div>

        @*Product name & description*@
        <div class="description" style="width:350px">
            <span>@product.ProductName</span>
            <span>@product.ProductDesc</span>
            <span>$@product.ProductPrice</span>
        </div>

        @*Quantity*@
    <div class="quantity" style="width:100px">

        <button class="quantity-btn" name="plus_button" style="width:30px;float:left" product_id=@product.ProductId>+</button>
        <input type="text" name="quantity" style="width: 30px;float:left" value="@product.ProductQuantity" product_quantity="@product.ProductQuantity" class="quantitylisted" />
        <button class="quantity-btn" name="minus_button" style="width:30px;float:left" product_id=@product.ProductId>-</button>
        

        @*<form id="form" action="/Cart/PlusOne" method="post">
            <input type="hidden" name="productId" value="@product.ProductId" />
            <button class="quantity-btn" style="width:30px;float:left" type="submit" name="button" value="+">+</button>
        </form>
        <input type="text" name="quantity" style="width: 30px;float:left" value="@product.ProductQuantity" />

        @if (product.ProductQuantity > 1)
        {
            <form id="form" action="/Cart/MinusOne" method="post">
                <input type="hidden" name="productId" value="@product.ProductId" />
                <button class="quantity-btn" style="width:30px;float:left" type="submit" name="button" value="-">-</button>
            </form>
        }
        else
        {
            <input type="hidden" name="productId" value="@product.ProductId" />
            <button class="quantity-btn" style="width:30px;float:left" type="submit" onclick="reachlowlimit()" name="button" value="-">-</button>
        }*@
    </div>

        @*<div class="quantity">
                <button class="quantity-btn" type="button" name="button">
                    <i class="material-icons" style="font-size:24px;">add_circle_outline</i>
                </button>
                <input type="text" name="quantity" value="1" min="1" style="width: 30px;" />
                <button class="quantity-btn" type="button" name="button">
                    <i class="material-icons" style="font-size:24px;">remove_circle_outline</i>
                </button>
        </div>*@

        @*price*@
        <div class="itemPrice"><p>$@product.ProductTotal</p></div>

        @*delete button*@
    <div class="buttons">
      
        <form id="form" action="/Cart/Remove" method="post">
            <input type="hidden" name="productId" value="@product.ProductId" />
            <button class="quantity-btn" name="remove" type="submit" style="width:80px;float:left" value="Remove">Remove</button>
        </form>
        @*<button class="delete-btn" type="button" name="button">
            <i class="material-icons" style="font-size:24px;">delete</i>
        </button>*@
    </div>
    </div>
        }
        <div class="total" style="position:relative;left:10%;font-weight:bold">
            <div class="total-item">
                <label>Total: $@ViewData["AllTotalPrice"]</label>
            </div>
        </div>
    </div>

    <div class="shopping-btn">
        <form action="/Cart/ClearCart" method="post">
            <input class="container4" type="submit" value="Clear Cart" />
        </form>
    </div>
}

@section Scripts{
    <script src="~/js/shared/index.js"></script>
}