@using  ASP_CA.Controllers
@{
    var viewcart = (List<CartProduct>)ViewData["ViewCart"];
    int total = (int)ViewData["AllTotalPrice"];
}
<style>
    table, th, tr {
        border: 1px solid black;
    }

    .btn {
        background: white;
    }

    div.container4 {
        height: 10em;
        position: relative
    }

